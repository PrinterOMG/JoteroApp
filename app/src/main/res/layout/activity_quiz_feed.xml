<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFeed">

    <TextView
        android:id="@+id/available_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:text="@string/available_quiz"/>

    <RelativeLayout
        android:id="@+id/available_quiz_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/available_quiz"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="30sp"
        android:background="@drawable/available_quiz_in_feed_style">

        <TextView
            android:id="@+id/available_quiz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:textAlignment="center"
            android:text="Название опроса" />

        <TextView
            android:id="@+id/available_quiz_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/available_quiz_name"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="8sp"
            android:layout_marginStart="5sp"
            android:text="Дата проведения"/>

        <TextView
            android:id="@+id/available_quiz_count_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:layout_below="@+id/available_quiz_name"
            android:text="Кол-во вопросов"/>

    </RelativeLayout>
    
    <View
        android:id="@+id/divide_line"
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/available_quiz_body"
        android:layout_marginTop="30sp"
        android:background="@color/black"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/completed_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line"
        android:layout_marginTop="30sp"
        android:layout_marginStart="20sp"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:text="@string/completed_quiz"/>

    <RelativeLayout
        android:id="@+id/completed_quiz_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/completed_quiz"
        android:layout_marginTop="30sp"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:background="@drawable/completed_quiz_in_feed_style">

        <TextView
            android:id="@+id/completed_quiz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:textAlignment="center"
            android:text="Название опроса" />

        <TextView
            android:id="@+id/completed_quiz_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/completed_quiz_name"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="8sp"
            android:layout_marginStart="5sp"
            android:text="Дата проведения"/>

        <TextView
            android:id="@+id/completed_quiz_count_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="8sp"
            android:layout_marginBottom="8sp"
            android:layout_below="@+id/completed_quiz_name"
            android:text="Кол-во вопросов"/>

    </RelativeLayout>


</RelativeLayout>