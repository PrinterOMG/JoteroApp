<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/available_quiz_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/available_quiz"
    android:layout_marginStart="40sp"
    android:layout_marginEnd="40sp"
    android:layout_marginTop="30sp"
    android:background="@drawable/available_quiz_in_feed_style">

    <TextView
        android:id="@+id/available_quiz_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:layout_marginHorizontal="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Название опроса"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/available_quiz_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/available_quiz_name"
        android:layout_marginStart="8sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="8sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Дата проведения" />

    <TextView
        android:id="@+id/available_quiz_count_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/available_quiz_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Кол-во вопросов" />

</RelativeLayout>